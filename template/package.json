{
  "name": "{{ name }}",
  "version": "1.0.0",
  "description": "{{ description }}",
  "author": "{{ author }}",
  "private": true,
  "scripts": {
    "dev": "node build/dev-server.js",
    "build": "node build/build.js",
    {{#unit}}
    "unit": "karma start test/unit/karma.conf.js --single-run",
    {{/unit}}
    {{#e2e}}
    "e2e": "node test/e2e/runner.js",
    {{/e2e}}
    "test": "{{#unit}}npm run unit{{/unit}}{{#unit}}{{#e2e}} && {{/e2e}}{{/unit}}{{#e2e}}npm run e2e{{/e2e}}"{{#lint}},
    "lint": "eslint --ext .js,.jsx src{{#unit}} test/unit/specs{{/unit}}{{#e2e}} test/e2e/specs{{/e2e}}"{{/lint}}
  },
  "dependencies": {
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    {{#if_eq routerConfig "1.0"}}
    "react-router": "^1.0.3",
    "history": "^1.17.0",
    {{/if_eq}}
    {{#if_eq routerConfig "2.0"}}
    "react-router": "^2.8.1",
    "history": "^1.17.0",
    {{/if_eq}}
    {{#if_eq routerConfig "latest"}}
    "react-router": "^latest",
    "history": "^1.17.0",
    {{/if_eq}}
    "babel-runtime": "^6.0.0"
  },
